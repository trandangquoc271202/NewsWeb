<body>

    @Html.Partial("Header")

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Manage Accounts</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Data</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Comment</h5>

                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">IdUser</th>
                                        <th scope="col">Link Post</th>
                                        <th scope="col">Comment</th>
                                        <th scope="col">Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.ItemList)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.idUser</td>
                                            <td>
                                               <a href="/Detail/Detail?id=@item.link">click here</a>
                                            </td>
                                            <td>
                                                @{
                                                    string modifiedString = item.message.Length > 20 ? item.message.Substring(0, 20) + "...." : item.message;
                                                }
                                                @modifiedString
                                            </td>
                                            <td><a style="cursor: pointer;" href="/Admin/CommentManage/Detail?id=@item.id"><i class="bi bi-pen"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main>

    <!-- ======= Footer ======= -->
